{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/cjs",
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}

